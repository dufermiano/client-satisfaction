{
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-console": "off", // Permitir console.log (útil para debug)
      "import/extensions": "off", // Para não exigir extensões nos imports
      "no-use-before-define": "off", // Previne erro antes de funções serem definidas
      "@typescript-eslint/no-use-before-define": ["error"],
      "class-methods-use-this": "off",
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": ["error"],
      "import/prefer-default-export": "off"
    }
  }
  